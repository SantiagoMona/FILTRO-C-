@model Job;
@{
    ViewData["Title"] = "Detalles del trabajo";
}

<div class="container text-center">
  

    <div class="row">
        <div class="col-md-auto" style="background-color: gray;">
             <div class="col">
                <a class="btn btn-primary mt-5 btn-lg" asp-controller="Jobs" asp-action="Create">Crear oferta de empleo</a>
            </div>
            <div class="col">
                 <a class="btn btn-primary mt-5 btn-lg" asp-controller="Jobs" asp-action="Index">Listado de ofertas</a>
            </div>
        </div>
        

        <div class="col-8 " >
            <p width="100px"><img src="@Model.LogoCompany" alt="" class="object-fit-contain" width="100px"></p>
            <h1>@Model.OfferTitle</h1>
            <p>@Model.NameCompany</p>
            <p>Estado: @Model.Status</p>
            <p>Salario: @Model.Salary</p>
            <p>vacantes: @Model.Positions</p>
            <p>pais: @Model.Country</p>
            <p>Idioma: @Model.Languages</p>


            <P>Descripcion:</P>
            <p>@Model.Description</p>
        </div>
    </div>
</div>

            